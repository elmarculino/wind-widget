<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:angle="270"
                android:startColor="#1A1D21"
                android:endColor="#0D0F12" />
        </shape>
    </item>

    <!-- Chart area simulation -->
    <item
        android:top="50dp"
        android:left="40dp"
        android:right="20dp"
        android:bottom="80dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#804ADE80"
                android:endColor="#004ADE80" />
        </shape>
    </item>

    <!-- Bottom bar -->
    <item android:top="120dp">
        <layer-list>
            <item android:right="214dp">
                <shape android:shape="rectangle">
                    <solid android:color="#3B82F6" />
                </shape>
            </item>
            <item android:left="107dp" android:right="107dp">
                <shape android:shape="rectangle">
                    <solid android:color="#4ADE80" />
                </shape>
            </item>
            <item android:left="214dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FBBF24" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>
